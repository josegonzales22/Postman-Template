					"listen": "test",
					"script": {
						"exec": [
							"/**********************************/\r",
							"/* USO Y ALMACENAMIENTO DE TOKENS */\r",
							"/**********************************/\r",
							"try {\r",
							"    const data = pm.response.json();\r",
							"    if (data.accessToken) {\r",
							"        pm.collectionVariables.set(\"accessToken\", data.accessToken);\r",
							"    }\r",
							"    if (data.refreshToken) {\r",
							"        pm.collectionVariables.set(\"refreshToken\", data.refreshToken);\r",
							"    }\r",
							"\r",
							"} catch (e) {\r",
							"    console.log(\"Error procesando JSON:\", e);\r",
							"}\r",
							"\r",
							"/*************************/\r",
							"/* CONFIGURACIÓN DE TEST */\r",
							"/*************************/\r",
							"pm.test(\"Status code es 200\", function () {\r",
							"    pm.expect(pm.response.code).to.eql(200);\r",
							"});\r",
							"\r",
							"pm.test(\"Tiempo de respuesta < 1000ms\", function () {\r",
							"    pm.expect(pm.response.responseTime).to.be.below(1000);\r",
							"});\r",
							"\r",
							"pm.test(\"Respuesta es JSON válida\", function () {\r",
							"    pm.expect(() => pm.response.json()).to.not.throw();\r",
							"});\r",
							"\r",
							"pm.test(\"Content-Type es application/json\", function () {\r",
							"    pm.expect(pm.response.headers.get(\"Content-Type\")).to.include(\"application/json\");\r",
							"});\r",
							"\r",
							"pm.test(\"El body no está vacío\", function () {\r",
							"    pm.expect(pm.response.text()).to.not.be.empty;\r",
							"});\r",
							""
						],
