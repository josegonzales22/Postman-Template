							"// 2. Tiempo de respuesta aceptable\r",
							"pm.test(\"Tiempo de respuesta < 1000ms\", function () {\r",
							"    pm.expect(pm.response.responseTime).to.be.below(1000);\r",
							"});\r",
							"\r",
							"// 3. Respuesta es JSON válido (si aplica)\r",
