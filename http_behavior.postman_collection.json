		{
			"name": "Update a product",
			"event": [
				{
					"listen": "prerequest",
					"script": {
						"exec": [
							"/*****************************/\r",
							"/* INYECCIÓN DEL AUTH HEADER */\r",
							"/*****************************/\r",
							"const token = pm.collectionVariables.get(\"accessToken\");\r",
							"\r",
							"if (token) {\r",
							"    pm.request.headers.upsert({\r",
							"        key: \"Authorization\",\r",
							"        value: `Bearer ${token}`\r",
							"    });\r",
							"} else {\r",
							"    console.warn(\"⚠️ No se encontró accessToken en collectionVariables\");\r",
							"}\r",
							"\r",
							"\r",
							"/*********************************************/\r",
							"/* GET ALEATORIO DE PRODUCTOS (DUMMYJSON)    */\r",
							"/*********************************************/\r",
							"pm.sendRequest({\r",
							"    url: \"https://dummyjson.com/auth/products\",\r",
							"    method: \"GET\",\r",
							"    header: {\r",
							"        \"Authorization\": `Bearer ${pm.collectionVariables.get(\"accessToken\")}`\r",
							"    }\r",
							"}, function (err, res) {\r",
							"    if (err) {\r",
							"        console.error(\"❌ Error en la petición:\", err);\r",
							"        return;\r",
							"    }\r",
							"\r",
							"    const data = res.json();\r",
							"\r",
							"    const products = data.products;\r",
							"\r",
							"    if (!products || products.length === 0) {\r",
							"        console.warn(\"⚠️ No se encontraron productos\");\r",
							"        return;\r",
							"    }\r",
							"\r",
							"    // Producto aleatorio\r",
							"    const randomIndex = Math.floor(Math.random() * products.length);\r",
							"    const randomProduct = products[randomIndex];\r",
							"\r",
							"    // Guardar ID en COLLECTION VARIABLES\r",
							"    pm.collectionVariables.set(\"id\", randomProduct.id);\r",
							"\r",
							"    console.log(\"✔️ ID aleatorio seleccionado:\", randomProduct.id);\r",
							"});\r",
							""
						],
						"type": "text/javascript",
						"packages": {},
						"requests": {}
					}
				},
				{
					"listen": "test",
					"script": {
						"exec": [
							"/*************************/\r",
							"/* CONFIGURACIÓN DE TEST */\r",
							"/*************************/\r",
							"// 1. Status code correcto\r",
							"pm.test(\"Status code es 200\", function () {\r",
							"    pm.expect(pm.response.code).to.eql(200);\r",
							"});\r",
